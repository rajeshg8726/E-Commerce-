	<form class="bg0 p-t-75 p-b-85" style="margin-top: 2rem;">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">ID</th>
									<th class="column-2">DATE</th>
									<th class="column-3">STATUS</th>
									
								</tr>
								<% let total_price = 0;
								if (cart && Array.isArray(cart) && cart.length > 0) {
								   cart.forEach(ct => {
									   const cartProduct = product.find(prduct => prduct._id.toString() === ct.product_id.toString());
									   if (cartProduct) {    %>
                                        <a href="/dashboard">
								<tr class="table_row">
									<td class="column-1">
										<div class="how-itemcart1">
											<img src="/uploads/product_images/<%= cartProduct.image %>" alt="IMG">
										</div>
									</td>
									<td class="column-2"><%= cartProduct.product_name %>
										<% total_price += cartProduct.price; %></td>
									<td class="column-3">$<%= cartProduct.price %></td>
									
									

									
								</tr>
                            </a>
								<%      }
						});
